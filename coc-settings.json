{
  "coc.preferences.formatOnSaveFiletypes": ["json", "python"],
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.snippets.enable": true,

  // python config
  "python.venvPath": "~/virtualenvs",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/virtualenvs/neovim/bin/black",
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintPath": "~/virtualenvs/neovim/bin/pylint",
  "python.linting.flake8Path": "~/virtualenvs/neovim/bin/flake8",

   // Snippets
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/snips"],

  //diagnostic
  "diagnostic.checkCurrentLine": true,
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    }
  }

}
